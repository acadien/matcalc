#!/usr/bin/python

import sys
import pylab as pl
from matplotlib import image

def usage():
    print "%s <tif image(s)>"%(sys.argv[0])

for fil in sys.argv[1:]:
    filout=fil.split(".")[0]+".png"
    picdata=image.imread(fil)
    imgplot=pl.imshow(picdata)
#    imgplot.set_cmap('spectral')
    
    pl.savefig("filout")
